---
import Container from "../layout/Container.astro";
import SectionHeader from "../ui/SectionHeader.astro";
import { Icon } from "astro-icon/components";

const categories = [
  {
    name: "Construction & Trades",
    count: "240+ jobs",
    icon: "solar:buildings-bold-duotone",
  },
  {
    name: "Warehouse & Logistics",
    count: "180+ jobs",
    icon: "solar:box-bold-duotone",
  },
  {
    name: "Manufacturing",
    count: "150+ jobs",
    icon: "solar:settings-bold-duotone",
  },
  {
    name: "IT & Technology",
    count: "320+ jobs",
    icon: "solar:monitor-bold-duotone",
  },
  {
    name: "Healthcare",
    count: "200+ jobs",
    icon: "solar:health-bold-duotone",
  },
  {
    name: "Hospitality & Events",
    count: "130+ jobs",
    icon: "solar:cup-hot-bold-duotone",
  },
];
---

<section id="categories" class="py-14">
  <Container>
    <SectionHeader
      title="Explore Job Categories"
      subtitle="Browse opportunities across a wide range of industries. Find the perfect fit for your skills and experience."
      data-animate="fade-up"
    />

    <div
      class="mt-10 grid gap-5 sm:grid-cols-2 lg:grid-cols-3"
      data-animate-stagger
    >
      {
        categories.map((category) => (
          <a
            href="#"
            data-animate="fade-up"
            class="group flex items-center gap-4 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm transition-all hover:border-indigo-500 hover:shadow-md dark:border-gray-800 dark:bg-gray-900 dark:hover:border-indigo-400"
          >
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-gray-100 text-gray-600 transition-colors group-hover:bg-indigo-100 group-hover:text-indigo-600 dark:bg-gray-800 dark:text-gray-400 dark:group-hover:bg-indigo-900/30 dark:group-hover:text-indigo-400">
              <Icon name={category.icon} class="h-6 w-6" />
            </div>
            <div>
              <h3 class="font-bold text-gray-900 dark:text-gray-100">
                {category.name}
              </h3>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                {category.count}
              </p>
            </div>
            <Icon
              name="solar:arrow-right-bold-duotone"
              class="ml-auto h-5 w-5 text-gray-400 transition-transform group-hover:translate-x-1 group-hover:text-indigo-500 dark:group-hover:text-indigo-400"
            />
          </a>
        ))
      }
    </div>
  </Container>
</section>
