---
interface Props {
  title: string;
  subtitle?: string;
  [key: string]: any;
}
const { title, subtitle, ...attrs } = Astro.props;
---

<div {...attrs} class="mx-auto max-w-2xl text-center">
  <h2
    class="text-2xl font-extrabold tracking-tight text-slate-900 dark:text-gray-100 sm:text-3xl"
  >
    {title}
  </h2>
  {
    subtitle && (
      <p class="mt-3 text-base text-slate-500 dark:text-gray-400">{subtitle}</p>
    )
  }
</div>
