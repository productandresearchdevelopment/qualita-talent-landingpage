---
interface Props {
  text: string;
  class?: string;
}
const { text, class: className = "" } = Astro.props;
---

<span
  class:list={[
    "inline-flex items-center rounded-full border border-gray-200 bg-gray-50 px-3 py-1 text-xs font-medium text-gray-600 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400",
    className,
  ]}
>
  {text}
</span>
