---
import Container from "../layout/Container.astro";
import SectionHeader from "../ui/SectionHeader.astro";
import { Icon } from "astro-icon/components";
---

<section class="py-14">
  <Container>
    <SectionHeader
      title="Our Impact in Numbers"
      subtitle="Real results that speak for themselves â€” measurable growth, reliable talent, and consistent delivery."
      data-animate="fade-up"
    />

    <div class="mt-10 grid gap-8 md:grid-cols-2" data-animate="fade-up">
      <!-- Left: Bar Chart -->
      <div
        class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900"
      >
        <h3
          class="text-sm font-bold uppercase tracking-wider text-gray-500 dark:text-gray-400"
        >
          Placements by Industry
        </h3>
        <div class="mt-6 space-y-4">
          {
            [
              { label: "Manufacturing", value: 85, color: "bg-orange-500" },
              {
                label: "Logistics & Warehouse",
                value: 72,
                color: "bg-blue-500",
              },
              { label: "Retail & F&B", value: 64, color: "bg-orange-400" },
              { label: "Construction", value: 53, color: "bg-blue-400" },
              { label: "IT & Admin", value: 41, color: "bg-orange-300" },
            ].map((item) => (
              <div>
                <div class="mb-1.5 flex items-center justify-between text-sm">
                  <span class="font-medium text-slate-700 dark:text-gray-300">
                    {item.label}
                  </span>
                  <span class="font-semibold text-slate-900 dark:text-white">
                    {item.value}%
                  </span>
                </div>
                <div class="h-2.5 w-full overflow-hidden rounded-full bg-gray-100 dark:bg-gray-800">
                  <div
                    class:list={[
                      "h-full rounded-full transition-all duration-700",
                      item.color,
                    ]}
                    style={`width: ${item.value}%`}
                  />
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Right: Donut Chart + Key Stats -->
      <div class="grid gap-6">
        <!-- Donut Chart -->
        <div
          class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900"
        >
          <h3
            class="text-sm font-bold uppercase tracking-wider text-gray-500 dark:text-gray-400"
          >
            Worker Retention Rate
          </h3>
          <div class="mt-6 flex items-center gap-8">
            <!-- CSS Donut -->
            <div class="relative h-32 w-32 shrink-0">
              <svg viewBox="0 0 36 36" class="h-full w-full -rotate-90">
                <circle
                  cx="18"
                  cy="18"
                  r="14"
                  fill="none"
                  stroke-width="4"
                  class="stroke-gray-100 dark:stroke-gray-800"></circle>
                <circle
                  cx="18"
                  cy="18"
                  r="14"
                  fill="none"
                  stroke-width="4"
                  stroke-linecap="round"
                  stroke-dasharray="82 100"
                  class="stroke-orange-500"></circle>
                <circle
                  cx="18"
                  cy="18"
                  r="14"
                  fill="none"
                  stroke-width="4"
                  stroke-linecap="round"
                  stroke-dasharray="12 100"
                  stroke-dashoffset="-82"
                  class="stroke-blue-500"></circle>
              </svg>
              <div
                class="absolute inset-0 flex flex-col items-center justify-center"
              >
                <span class="text-2xl font-bold text-slate-900 dark:text-white"
                  >94%</span
                >
                <span class="text-[10px] text-gray-500">Retention</span>
              </div>
            </div>
            <!-- Legend -->
            <div class="space-y-3 text-sm">
              <div class="flex items-center gap-2">
                <span class="h-3 w-3 rounded-full bg-orange-500"></span>
                <span class="text-slate-700 dark:text-gray-300"
                  >Retained Workers</span
                >
                <span
                  class="ml-auto font-semibold text-slate-900 dark:text-white"
                  >94%</span
                >
              </div>
              <div class="flex items-center gap-2">
                <span class="h-3 w-3 rounded-full bg-blue-500"></span>
                <span class="text-slate-700 dark:text-gray-300">Turnover</span>
                <span
                  class="ml-auto font-semibold text-slate-900 dark:text-white"
                  >6%</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Mini Stats Row -->
        <div class="grid grid-cols-3 gap-4">
          {
            [
              {
                value: "2.5x",
                label: "Faster Hiring",
                icon: "solar:bolt-circle-bold-duotone",
                color: "text-orange-500",
              },
              {
                value: "30%",
                label: "Cost Savings",
                icon: "solar:wallet-money-bold-duotone",
                color: "text-blue-500",
              },
              {
                value: "4.9",
                label: "Client Rating",
                icon: "solar:star-bold-duotone",
                color: "text-amber-500",
              },
            ].map((stat) => (
              <div class="rounded-2xl border border-gray-200 bg-white p-4 text-center shadow-sm dark:border-gray-800 dark:bg-gray-900">
                <Icon
                  name={stat.icon}
                  class:list={["mx-auto h-8 w-8", stat.color]}
                />
                <div class="mt-1 text-xl font-bold text-slate-900 dark:text-white">
                  {stat.value}
                </div>
                <div class="mt-0.5 text-xs text-gray-500 dark:text-gray-400">
                  {stat.label}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </Container>
</section>
